{
  "name": "hi-mcp",
  "version": "1.0.0",
  "description": "MCP Server and Client Monorepo",
  "private": true,
  "packageManager": "pnpm@10.16.0",
  "scripts": {
    "build": "pnpm -r build",
    "watch": "pnpm -r --parallel watch",
    "clean": "pnpm -r clean",
    "start": "pnpm --filter hi-mcp-server start",
    "server": "pnpm --filter hi-mcp-server start",
    "client": "pnpm --filter hi-mcp-client start",
    "inspector": "pnpm --filter hi-mcp-server start:inspector",
    "install:all": "pnpm install && pnpm -r install",
    "check/format": "pnpm -r check/format",
    "format": "pnpm -r format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
